name: Pull Request Checks

on: [pull_request]

jobs:
  get-version:
    # Environment
    runs-on: ubuntu-latest

    steps:
      - name: Git Checkout
        uses: actions/checkout@v2
        with:
          ref: ${{ github.head_ref }} # needed for 'codacy/git-version'
          fetch-depth: 0 # needed for 'codacy/git-version'

      - name: Generate Version Number
        uses: codacy/git-version@2.2.0
        id: gitversion

    outputs:
      version: ${{ steps.gitversion.outputs.version  }}
  build:
    needs: [ get-version ]
    runs-on: windows-latest
    strategy:
      matrix:
        dotnet-version: ['3.1.x', '5.0.x', '6.0.x']

    steps:
      - name: Git Checkout
        uses: actions/checkout@v2

      - name: Setup .NET Core SDK  ${{ matrix.dotnet-version }}
        uses: actions/setup-dotnet@v1
        with:
          dotnet-version: ${{ matrix.dotnet-version }}

      - name: Restore Nuget Packages
        run: dotnet restore

      # Build
      - name: Add MSBuild to PATH
        uses: microsoft/setup-msbuild@v1.1

      - name: Run MSBuild
        run: msbuild /property:Configuration=Release /p:Version=${{ needs.get-version.outputs.version }}