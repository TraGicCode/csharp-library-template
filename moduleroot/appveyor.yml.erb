version: 1.0.{build}-beta
image: <%= @configs['image'] %>

skip_branch_with_pr: true

init:
- ps: |-
    if ($env:APPVEYOR_REPO_TAG -eq "true")
    {
        Update-AppveyorBuild -Version "$env:APPVEYOR_REPO_TAG_NAME"
    }
configuration: Release
dotnet_csproj:
  patch: true
  file: '**\*.csproj'
  version: '{version}'
  package_version: '{version}'
  assembly_version: '{version}'
  file_version: '{version}'
  informational_version: '{version}'
before_build:
  - ps: dotnet restore
build_script: 
- ps: dotnet build --no-restore --configuration Release
- ps: dotnet pack --no-restore --no-build --configuration Release --include-source /p:Version=$env:APPVEYOR_BUILD_VERSION
artifacts:
  - path: src\<%= @metadata[:module_name] %>\bin\Release\<%= @metadata[:module_name] %>.*.nupkg
    name: nupkgs
deploy:
  - provider: NuGet
    api_key:
      secure: 8v7kxS3JrrBgMLXNM8wnl4JAkAnqW3R9D4eVnqND9RsXNYGStmoDRo6ZWguydPWS
    skip_symbols: false
    symbol_server:           # remove to push symbols to SymbolSource.org
    artifact: /.*(\.|\.s)(nupkg)/
    on:
      appveyor_repo_tag: true        # deploy only on tag push
  - provider: GitHub
    description: Automatically created by AppVeyor.
    auth_token:
      secure: s39ckGvRShV6HXhGpbmkpl/XnRUjNQ7NweZBEj4EQ+uzn/cB0LbS4b8/kekJtaKE
    artifact: /.*(\.|\.s)(nupkg)/
    draft: true
    on:
      appveyor_repo_tag: true        # deploy only on tag push